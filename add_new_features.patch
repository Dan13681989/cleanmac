+# Create aliases
+create_aliases() {
+    local install_dir="/usr/local/bin"
+    local script_name="cleanmac"
+    
+    # Create quickclean alias
+    sudo sh -c "cat > $install_dir/quickclean << 'EOF'
+#!/bin/bash
+$install_dir/$script_name --quick-clean
+EOF"
+    sudo chmod +x "$install_dir/quickclean"
+    
+    # Create sysinfo alias
+    sudo sh -c "cat > $install_dir/sysinfo << 'EOF'
+#!/bin/bash
+$install_dir/$script_name --sys-info
+EOF"
+    sudo chmod +x "$install_dir/sysinfo"
+    
+    # Create health-score alias
+    sudo sh -c "cat > $install_dir/health-score << 'EOF'
+#!/bin/bash
+$install_dir/$script_name --health-score
+EOF"
+    sudo chmod +x "$install_dir/health-score"
+    
+    # Create security-audit alias
+    sudo sh -c "cat > $install_dir/security-audit << 'EOF'
+#!/bin/bash
+$install_dir/$script_name --security-audit
+EOF"
+    sudo chmod +x "$install_dir/security-audit"
+}
